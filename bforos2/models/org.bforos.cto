/**
 * Write your model definitions here
 */

namespace org.bforos

asset ResearchOJ identified by ROId {
  o String ROId
  o TypeRO typero default="journalArticle"
  o String description
  o String[] urls
  o String[] Publishers optional
  o Integer reward default=5
  o Integer cost default=1
  --> Researcher[] contributor 
  }

/*
asset Disco identified by DiscoId {
  o String DiscoId
  o String[] Robjs
}
*/

participant Researcher identified by email {
  o String email
  o String firstName
  o String lastName
  o Integer wallet default=10
}

participant Institution identified by InsId {
  o String InsId
  o String InsName
  o Integer budget default=100
}

// should RO be created as a transaction Create RO?

transaction Claim {
  --> ResearchOJ Ro
  --> Researcher contributor
}

event WalletEvent {
  --> Researcher contributor
  o Integer oldbalance
  o Integer newbalance
}

transaction ResearchOJHistory {
  o String ROId
}

event ResearchOJHistoryResults {
  o String[] results
}

enum TypeRO {
  // type of research objects FaBiO Classes, need to include all
  o abstracts
  o algorithm
  o book
  o clinicalGuideline
  o computerProgram
  o dataset
  o experimentalProtocol
  o journalArticle
  o patent
  o presentation
  o repository
  o thesis
  o webPage
  o workingPaper
}
